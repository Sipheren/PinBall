# Environment Variables for Pinball Game
# Copy this file to .env and fill in your actual values

# ============================================================================
# Google Gemini API (for asset generation)
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
# Required for automated texture and graphic generation using Imagen 3
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# Optional: API Configuration
# ============================================================================
# Custom API endpoint (if using a proxy or regional endpoint)
# GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com/v1beta

# Model selection (default: imagen-3.0-generate-001)
# Options: imagen-3.0-generate-001, imagen-3.0-generate-001 (for faster generation)
# GEMINI_MODEL=imagen-3.0-generate-001

# ============================================================================
# Future: Game Configuration
# ============================================================================
# These will be used by the game engine when implemented

# Physics debug mode
# PHYSICS_DEBUG=false

# Audio settings
# AUDIO_VOLUME=0.8
# AUDIO_ENABLED=true

# Render settings
# RENDER_FPS=60
# RENDER_ANTIALIASING=true
